<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blackSemiTransparentLight">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Background" />

    <LinearLayout
        android:id="@+id/llBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_menu_border"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/tvTransactionHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Transaction History"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:drawableTint="@color/colorSecondaryDark"
            android:drawableLeft="@drawable/ic_transaction"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/tvNotifiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Notifications"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:drawableTint="@color/colorSecondaryDark"
            android:drawableLeft="@drawable/ic_notification"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/tvFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Favorites"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:drawableTint="@color/colorSecondaryDark"
            android:drawableLeft="@drawable/ic_star"
            android:textColor="@color/colorSecondary"/>

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Log out"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:paddingRight="140dp"
            android:paddingLeft="140dp"
            android:gravity="center"
            android:background="@drawable/top_round_border"
            android:drawablePadding="8dp"
            android:drawableTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_logout"
            android:textColor="@color/colorAccent"/>


    </LinearLayout>

</RelativeLayout>
