<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/blackSemiTransparentLight"
android:padding="24dp">

<LinearLayout
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/round_border"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        style="@style/registrationDetailsTitleText"
        android:drawableLeft="@drawable/ic_problem"
        android:drawableTint="@color/colorAccent"
        android:text="Confirm Deletion"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        style="@style/registrationDetailsText"
        android:text="Are you sure to delete"/>

    <TextView
        style="@style/registrationDetailsText"
        android:text="Ahmed Wagdy"
        android:textColor="@color/colorAccent"/>

    <TextView
        style="@style/registrationDetailsText"
        android:text="Business Card"/>


    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_round_border"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/cancel"
            style="@style/MainLinearLayoutButton"
            android:text="Delete"
            android:textColor="@color/colorAccent" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary" />

        <Button
            android:id="@+id/btnSend"
            style="@style/MainLinearLayoutButton"
            android:text="Dismiss"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>

</RelativeLayout>
