<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_layout_top"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/title"
        style="@style/registrationTitle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/registration_layout_top_choice_linear"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/RegistrationChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_round_choice_layout">

            <Button
                android:id="@+id/existingAccountButton"
                style="@style/registrationChoiceButton"
                android:text="Existing User"/>

            <Button
                android:id="@+id/newAccountButton"
                style="@style/registrationChoiceButton"
                android:text="New User" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/RegistrationChoice"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>


</LinearLayout>